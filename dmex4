#include<stdio.h>
#include<stdlib.h>

main(){
int head=0, tail=0;

char str[s];
printf("Who are you?" );
scanf("%s",str);
printf("Hello, %s", str);
printf("\n");

printf("Tossing a coin...");

for(int i=0;i<3;i++){
int num=rand();
if(num%2==0){
printf("Round %d: Head", i+1);
heads++;
}else{
printf("Round %d: Tail",i+1);
tails++;
}
}

printf("Heads: %d, Tails: %d", heads, tails);

return 0;
}
